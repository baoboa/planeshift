            <mass min="1" max="6" />
            <uniformvelocity />
            <initialvelocity x="0" y="3" z="0" />
            <initialttl min="0.1" max="1" />
            <placement>center</placement>                                          
          </emitter>
 <particlesize x="1.5" y="" />
          <effector type="force">
            <randomacceleration x="0" y="0" z="0" />
          </effector>    
          		  
          <effector type="lincolor">
          </effector>        
	  </params>
	</meshfact>
</library>
