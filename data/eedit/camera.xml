<widget_description>
<widget name="CameraToolbox" factory="EEditCameraToolbox" 
    visible="yes" savepositions="yes" movable="yes" resizable="no" 
    resizetoscreen="no">

    <frame x="325" y="30" width="90" height="55" border="yes" justtitle="yes" />
    <title resource="TitleBar" text="Camera" align="left" />
    <font name="LiberationSans-Regular.ttf" r="255" g="255" b="255" size="9"  sr="0" sg="0" sb="0" shadow="yes" />   
    <bgimage resource="Back" alpha="100" />

    <!-- camera controls -->
    <widget name="cam_left" factory="pawsButton" toggle="no" shadows="yes" >
        <frame x="5" y="16" width="20" height="20" border="no" />
        <buttonup resource="Left Arrow" />
        <buttondown resource="Left Arrow" />
    </widget>
    <widget name="cam_right" factory="pawsButton" toggle="no" shadows="yes" >
        <frame x="36" y="16" width="20" height="20" border="no" />
        <buttonup resource="Right Arrow" />
        <buttondown resource="Right Arrow" />
    </widget>
    <widget name="cam_up" factory="pawsButton" toggle="no" shadows="yes" >
        <frame x="20" y="2" width="20" height="20" border="no" />
        <buttonup resource="Up Arrow" />
        <buttondown resource="Up Arrow" />
    </widget>
    <widget name="cam_down" factory="pawsButton" toggle="no" shadows="yes" >
        <frame x="20" y="31" width="20" height="20" border="no" />
        <buttonup resource="Down Arrow" />
        <buttondown resource="Down Arrow" />
    </widget>
    <widget name="cam_forward" factory="pawsButton" toggle="no" shadows="yes" >
        <frame x="60" y="2" width="20" height="20" border="no" />
        <buttonup resource="Up Arrow" />
        <buttondown resource="Up Arrow" />
    </widget>
    <widget name="cam_back" factory="pawsButton" toggle="no" shadows="yes" >
        <frame x="60" y="30" width="20" height="20" border="no" />
        <buttonup resource="Down Arrow" />
        <buttondown resource="Down Arrow" />
    </widget>
 </widget>
</widget_description>
