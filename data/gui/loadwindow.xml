<widget_description>

  <widget name="LoadWindow" factory="pawsLoadWindow" visible="yes" movable="no" resizable="no" resizetoscreen="yes" alwaysontop="yes">
        <frame x="0" y="0" width="800" height="600" border="no" />
        <font name="cupandtalon.ttf" r="180" g="180" b="180" size="12" shadow="yes" resizetoscreen="yes" />
        <bgimage resource="Loading Background" />

        <widget name="loadtext" factory="pawsMessageTextBox" >
            <frame x="350" y="575" width="295" height="80" border="no" />
            <font name="cupandtalon.ttf" r="180" g="180" b="180" size="10" shadow="yes" resizetoscreen="yes" />
        </widget>
        <widget name="motd" factory="pawsMultiLineTextBox" >
            <frame x="100" y="10" width="600" height="20" />
            <bgimage resource="Scaling Field Background" />
        </widget>
        <widget name="guildmotd" factory="pawsMultiLineTextBox" visible="no" >
	             <frame x="30" y="350" width="295" height="100" border="no"/>
                 <bgimage resource="Scaling Field Background" />
        </widget>
        <widget name="tip" factory="pawsMultiLineTextBox" >
            <frame x="100" y="495" width="600" height="60" border="no" />
        <bgimage resource="Scaling Field Background" />
        </widget>
        <widget name="Progress" factory="pawsProgressBar" style="Scaling Progressbar">
            <frame x="25" y="570" height="20" width="750" />
            <fadecolor r="100" g="100" b="255" />
        </widget>
    </widget>
</widget_description>



