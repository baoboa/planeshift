<widget_description>

    <pawsCharDescription name="DescriptionEdit" visible="yes" savepositions="no" movable="yes" keepaspect="no" resizable="yes" configurable="yes" style="New Standard GUI">

        <frame x="100" y="100" width="320" height="270" border="no" />
        <minframe width="250" height="250" />
        <title resource="Scaling Title Bar" text="Modify description" align="left" close_button="yes" />

        <pawsTextBox name="lbl">
            <frame x="34" y="8" width="200" height="20" border="no" style="Main Header Font" />
            <text string="Character description:" />
            <attachpoints>
                <attach point="PROPORTIONAL_RIGHT" />
                <attach point="PROPORTIONAL_LEFT" />
                <attach point="PROPORTIONAL_TOP" />
                <attach point="PROPORTIONAL_BOTTOM" />
            </attachpoints>
        </pawsTextBox>


        <pawsMultilineEditTextBox name="Description">
            <frame x="25" y="30" width="270" height="185" border="no" />
            <attachpoints>
                <attach point="PROPORTIONAL_RIGHT" />
                <attach point="PROPORTIONAL_TOP" />
                <attach point="PROPORTIONAL_LEFT" />
                <attach point="PROPORTIONAL_BOTTOM" />
            </attachpoints>
        </pawsMultilineEditTextBox>

        <pawsButton name="OK" id="100" style="Standard Button">
            <frame x="5" y="238" width="70" height="30" />
            <attachpoints>
                <attach point="PROPORTIONAL_RIGHT" />
                <attach point="ATTACH_LEFT" />
                <attach point="PROPORTIONAL_TOP" />
                <attach point="ATTACH_BOTTOM" />
            </attachpoints>
            <label text="OK" />
        </pawsButton>

        <pawsButton name="Cancel" id="101" style="Standard Button">
            <frame x="80" y="238" width="70" height="30" />
            <attachpoints>
                <attach point="PROPORTIONAL_RIGHT" />
                <attach point="PROPORTIONAL_LEFT" />
                <attach point="PROPORTIONAL_TOP" />
                <attach point="ATTACH_BOTTOM" />
            </attachpoints>
            <label text="Cancel" />
        </pawsButton>

        <pawsButton name="Save" id="102" style="Standard Button">
            <frame x="170" y="238" width="70" height="30" />
            <attachpoints>
                <attach point="PROPORTIONAL_RIGHT" />
                <attach point="PROPORTIONAL_LEFT" />
                <attach point="PROPORTIONAL_TOP" />
                <attach point="ATTACH_BOTTOM" />
            </attachpoints>
            <label text="Store" />
        </pawsButton>

        <pawsButton name="Load" id="103" style="Standard Button">
            <frame x="245" y="238" width="70" height="30" />
            <attachpoints>
                <attach point="PROPORTIONAL_RIGHT" />
                <attach point="PROPORTIONAL_LEFT" />
                <attach point="PROPORTIONAL_TOP" />
                <attach point="ATTACH_BOTTOM" />
            </attachpoints>
            <label text="Load" />
        </pawsButton>

    </pawsCharDescription>

</widget_description>
