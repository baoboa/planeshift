    <buttons width="64" height="64" hide_width="16" hide_height="16" />
    <!-- Standard values -->
    <button name="ShowButtonUp"     x="0" y="0" />
    <button name="ShowButtonDown"   x="0" y="0" />
    <button name="ChatButton"       x="64" y="1" />
    <button name="SkillsButton"    x="128" y="1" />
