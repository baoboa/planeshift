<widget_description>

	<widget name="peSkinSelector" factory="peSkinSelector" visible="yes" savepositions="no" movable="yes" resizable="no">

	    <frame x="60" y="60" width="260" height="290" border="yes" justtitle="yes"/>
	    <title resource="peTitleBar" text="Select Skin" align="left" close_button="no" />
	    <bgimage resource="peBackTall" alpha="200" />

	    <widget name="SkinList" factory="pawsComboBox">
		<frame x="15" y="5" width="200" height="35" border="no"/>
		<listbox rows="4" height="30" text="Choose a skin" />
	    	<bgimage resource="peStandardBackground" alpha="200" />
	    </widget>

	    <widget name="SkinDesc" factory="pawsMultiLineTextBox">
		<frame x="15" y="45" width="230" height="75" border="yes"/>
		<text string=""/>
	    </widget>

	    <!-- Preview area -->
	    <widget name="SkinPreview" factory="pawsWidget" visible="yes" savepositions="no" movable="no" resizable="no">
		    <frame x="15" y="135" width="230" height="100" border="yes"/>

		    <widget name="PreviewButton" factory="pawsButton">
			<frame x="50" y="20" width="130" height="30" border="no"/>
			<label text="Test button"/>
		    </widget>

		    <widget name="PreviewBox" factory="pawsCheckBox">
			<frame x="50" y="60" width="190" height="30" />
			<text string=" Test checkbox"/>
		    </widget>
	    </widget>

	    <!-- OK button -->
	    <widget name="Apply" factory="pawsButton">
		<frame x="50" y="245" width="60" height="30" border="yes"/>
		<font name="LiberationSans-Regular.ttf" r="255" g="255" b="255" size="9"/>  
		<buttonup resource="peStandardButton"/>
		<buttondown resource="peStandardButton"/>
		<label text="Apply"/>
	    </widget>

	   <!-- Cancel button --> 
	    <widget name="Close" factory="pawsButton" toggle="no" shadows="yes">
		<frame x="150" y="245" width="60" height="30" border="yes"/>
		<font name="LiberationSans-Regular.ttf" r="255" g="255" b="255" size="9"/>  
		<buttonup resource="peStandardButton"/>
		<buttondown resource="peStandardButton"/>
		<label text="Close"/>
	    </widget> 

	</widget>

</widget_description>

