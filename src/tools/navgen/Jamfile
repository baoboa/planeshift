SubDir TOP src tools navgen ;

Application navgen :
	[ Wildcard *.cpp *.h ] : console ;

CompileGroups navgen : tools ;
ExternalLibs navgen : CRYSTAL ;

if $(HAVE_STATIC_PLUGINS) = "yes"
{
  SubVariant static ;

  Application navgen_static :
        [ Wildcard *.cpp *.h ] : console ;

  CFlags navgen_static : [ FDefines CS_STATIC_LINKED ]
  LFlags navgen_static : -lcrystalspace_staticplugins-$(CRYSTAL.VERSION)
  LinkWith navgen_static : psutil ;

  STATIC.PLUGINLIST =
  animesh
  animeshldr
  bindoc
  bruteblock
  csddsimg
  csfont
  csgifimg
  csjpgimg
  csjngimg
  csopcode
  csparser
  cspngimg
  cssynldr
  cstgaimg
  decal
  docpreproc 
  dsplex
  dynavis
  emit
  emitldr
  engine
  engseq
  fontplex
  freefnt2
  frustvis
  genmesh
  gl3d
  glshader_cg
  glshader_fixed
  glshader_ps1
  gmeshanim
  gmeshanimpdl
  gmeshldr
  imgplex
  null2d
  null3d
  nullmesh
  nullmeshldr
  particles
  particlesldr
  ptanimimg
  ptpdlight
  reporter
  rm_shadow_pssm
  rm_unshadowed
  sequence
  shadermgr
  shaderweaver
  simpleformer
  simpleformerldr
  skeleton2
  skeleton2ldr
  sndmanager
  sndsysloader
  sndsysnull
  sndsysogg
  sndsysopenal
  sndsyssoft
  sndsysspeex
  sndsyswav
  spr2d
  spr3d
  spr3dbin
  spr3dldr
  sprcal3d
  sprcal3dldr
  stdrep
  terrainldr
  terrain2
  terrain2ldr
  vfs
  xmlshader
  xmltiny
  ;

  LinkStaticPlugins navgen_static : $(STATIC.PLUGINLIST)
  : 
  : CRYSTAL
  ;
  LinkStaticPlugins navgen_static :
    bgloader
    recast
  ;

  CompileGroups navgen_static : tools ;
  ExternalLibs navgen_static : CRYSTAL ;

  SubVariant ;
}

